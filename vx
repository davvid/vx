#!/bin/sh
prepend () {
    test -n "$2" && printf '%s:%s' "$1" "$2" || printf '%s' "$1"
}

resolve_symlink () {
	uname_s=$(uname -s)
	if test "$uname_s" = "Darwin"
	then
		(
			cd -P -- "$(dirname -- "$1")" &&
			printf '%s\n' "$(pwd -P)/$(basename -- "$1")"
		)
	else
		readlink -f "$1"
	fi
}

prefix=$(resolve_symlink "$1")
if test -e "$prefix/bin"
then
	PATH=$(prepend "$prefix/bin" "$PATH")
fi
if test -e "$prefix/Scripts"
then
	PATH=$(prepend "$prefix/Scripts" "$PATH")
fi
export PATH

if test -e "$prefix/lib"
then
    libdir="$prefix/lib"
elif test -e "$prefix/lib64"
then
    libdir="$prefix/lib64"
fi
if test -n "$libdir"
then
    LD_LIBRARY_PATH=$(prepend "$libdir" "$LD_LIBRARY_PATH")
    export LD_LIBRARY_PATH
fi

unset PYTHON_HOME
PYTHON=${PYTHON:-python}
if test ! -e "$prefix/bin/$PYTHON" && test -n "$libdir"
then
    # $prefix is not a virtualenv, but it may contain python modules.
    python_version=$(
        "$PYTHON" -c 'import sys; print("%s.%s" % sys.version_info[:2])')
    site_packages="$libdir/python$python_version/site-packages"
    if test -e "$site_packages"
    then
        PYTHONPATH=$(prepend "$site_packages" "$PYTHONPATH")
        export PYTHONPATH
    fi
fi

shift
exec "$@"
